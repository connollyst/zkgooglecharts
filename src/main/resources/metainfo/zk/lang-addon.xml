<language-addon>
    <addon-name>zkgooglecharts</addon-name>
    <depends>zul</depends>
    <language-name>xul/html</language-name>

    <javascript src="https://www.google.com/jsapi"/>

    <version>
        <version-class>org.zkoss.google.charts.Version</version-class>
        <version-uid>0.3</version-uid>
        <zk-version>7.0.0</zk-version>
        <!-- or later -->
    </version>

    <component>
        <component-name>piechart</component-name>
        <component-class>org.zkoss.google.charts.PieChart</component-class>
        <widget-class>zul.googlecharts.PieChart</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/chart.js</mold-uri>
        </mold>
    </component>

    <component>
        <component-name>barchart</component-name>
        <component-class>org.zkoss.google.charts.BarChart</component-class>
        <widget-class>zul.googlecharts.BarChart</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/chart.js</mold-uri>
        </mold>
    </component>

    <component>
        <component-name>columnchart</component-name>
        <component-class>org.zkoss.google.charts.ColumnChart</component-class>
        <widget-class>zul.googlecharts.ColumnChart</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/chart.js</mold-uri>
        </mold>
    </component>

    <component>
        <component-name>timeline</component-name>
        <component-class>org.zkoss.google.charts.Timeline</component-class>
        <widget-class>zul.googlecharts.Timeline</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/chart.js</mold-uri>
        </mold>
    </component>
</language-addon>