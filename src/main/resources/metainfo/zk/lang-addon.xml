<language-addon>
    <addon-name>zkgooglecharts</addon-name>
    <depends>zul</depends>
    <language-name>xul/html</language-name>

    <javascript
            src="https://www.google.com/jsapi?autoload={modules:[{name:'visualization',version:'1.1',packages:['corechart','bar']}]}}"/>

    <version>
        <version-class>org.zkoss.google.charts.Version</version-class>
        <version-uid>0.1</version-uid>
        <zk-version>5.0.5</zk-version>
        <!-- or later -->
    </version>

    <component>
        <component-name>piechart</component-name>
        <component-class>org.zkoss.google.charts.PieChart</component-class>
        <widget-class>zul.googlecharts.PieChart</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/chart.js</mold-uri>
        </mold>
    </component>

    <component>
        <component-name>barchart</component-name>
        <component-class>org.zkoss.google.charts.BarChart</component-class>
        <widget-class>zul.googlecharts.BarChart</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/chart.js</mold-uri>
        </mold>
        <mold>
            <mold-name>material</mold-name>
            <mold-uri>mold/chart.js</mold-uri>
        </mold>
    </component>
</language-addon>